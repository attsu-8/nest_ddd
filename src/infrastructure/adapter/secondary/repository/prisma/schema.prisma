// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id String @id
  name String
  description String?
  deadline DateTime
  status Int
  backlogItem BacklogItem @relation(fields: [backlogItemId], references: [id])
  backlogItemId String
  user User @relation(fields: [userId], references: [id])
  userId String
}

model BacklogItem {
  id String @id
  story String?
  storyPoint Int
  backlogItemPriority Int
  description String?
  tasks Task[]
}

model User {
  id String @id
  name String
  task Task[]
}